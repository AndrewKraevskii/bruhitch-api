{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "$donationalerts": ["src/donationalerts"],
      "$donationalerts/*": ["src/donationalerts/*"],
      "$exceptions": ["src/exceptions"],
      "$exceptions/*": ["src/exceptions/*"],
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$middlewares": ["src/middlewares"],
      "$middlewares/*": ["src/middlewares/*"],
      "$routes": ["src/routes"],
      "$routes/*": ["src/routes/*"],
      "$types": ["src/types"],
      "$types/*": ["src/types/*"],
      "$eventsub": ["src/eventsub"],
      "$eventsub/*": ["src/eventsub/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
